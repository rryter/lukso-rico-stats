{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2018",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom", "es2018.promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lukso/web3-rx": ["libs/web3-rx/src/index.ts"],
      "@lukso/web3-rx/*": ["libs/web3-rx/src/*"],
      "@shared/*": ["./apps/rtm/src/app/shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
